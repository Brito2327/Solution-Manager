@{
    Layout = "~/Views/Shared/_LayoutFuncionario.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />

<div class="row">
    @for (int p = 0; p < ViewBag.Agendamento.Count; p++)
    {
        <div class="col-3">
            <div class="card agenda" style="width: 18rem;">
                <h2>@ViewBag.Agendamento[p].hora</h2>
                <img src="~/Content/imagens/relogio.jpeg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.Paciente[p].Nome</h5>
                    <p class="card-text">@ViewBag.Agendamento[p].observacao</p>
                </div>


            </div>
        </div>

    }
</div>
