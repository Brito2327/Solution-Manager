@model PagedList.IPagedList<ProjetoStag026.Models.Atendimentos>
@{
    Layout = "~/Views/Shared/_LayoutFuncionario.cshtml";
}
<div>
    <h3>
        Atendimentos
    </h3>
</div>

<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th class="align-content-center">Id</th>
            <th class="align-content-center">Paciente</th>
            <th class="align-content-center">Médico</th>
            <th class="align-content-center">Data</th>
            <th class="align-content-center">Plano</th>
        </tr>
    </thead>
    <tbody>
        @for (int p = 0; p < ViewBag.Atendiemtos.Count; p++)
        {
            <tr>
                <td class="align-content-center"> @ViewBag.Atendiemtos[p].Id</td>
                <td class="align-content-center">@ViewBag.Pacientes[p]</td>
                <td class="align-content-center">@ViewBag.Medico[p] </td>
                <td>@ViewBag.Atendiemtos[p].data.Date.ToString("dd/MM/yyyy") </td>
                <td>@ViewBag.Atendiemtos[p].Plano </td>
            </tr>
        }
        <tr>
            <td>
                <b>@ViewBag.Atendiemtos.Count registos de @ViewBag.Quantidade</b>
            </td>
            <td>
                <a href="~/Relatorios/GerarRelatorio">
                    <b>GERAR PDF</b>
                </a>
            </td>
        </tr>
    </tbody>
</table>
