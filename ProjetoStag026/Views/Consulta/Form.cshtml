                 },
                 complete:
                     function validar(jqXHR, resposta) {
                         if (jqXHR.responseJSON == "Sim") {
                             finalizarAgendamento(id);
                             window.location.href = "/Home";
                         } else {
                             alert("Erro aqui");
                         }
                     },
                 error: function (jqXHR, textStatus, errorThrown) {
                     alert('Error - ' + errorThrown);
                 }
             });

         }
    }

